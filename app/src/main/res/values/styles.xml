<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorDarkBlack</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:datePickerStyle">@style/customDatePickerFontStyle</item>
        <item name="android:dialogTheme">@style/customDateDialogFontStyle</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Keyboard" />

    <style name="Keyboard.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/keyboard_row_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Keyboard.Key">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/keyboard_text_size</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorDarkBlack</item>
        <item name="colorControlNormal">#C4C4C4</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_datepicker</item>
        <item name="colorAccent">@color/colorBtnBlack</item>
        <item name="colorControlActivated">@color/colorPointYellow</item>
    </style>

    <style name="Splash.StatusBar" parent="AppTheme">
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/colorPointYellowBackground</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>