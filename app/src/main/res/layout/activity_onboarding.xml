<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.nexters.zzallang.harusal2.ui.onBoarding.OnBoardingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_onboarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPointYellow">

        </androidx.viewpager.widget.ViewPager>

        <ImageButton
            android:id="@+id/btn_onboarding_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_close_24"
            android:background="@android:color/transparent"
            >

        </ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/indicator"
                android:layout_marginRight="4dp"
                >
            </ImageButton>

            <ImageButton
                android:id="@+id/indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/indicator"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/indicator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/indicator"
                android:layout_marginLeft="4dp">
            </ImageButton>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>