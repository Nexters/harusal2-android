<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/widget_bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_widget">
    </ImageView>

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_refresh_white"
        android:layout_margin="@dimen/widget_padding">
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_embarassed_coin"
            android:layout_marginBottom="@dimen/widget_padding">

        </ImageView>

        <TextView
            android:id="@+id/tv_dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="D-28"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal">

        </TextView>

        <TextView
            android:id="@+id/tv_remain_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:text="9,900원 남음">

        </TextView>

    </LinearLayout>

</RelativeLayout>