<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.nexters.zzallang.harusal2.ui.budget.edit.StartDayChangeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Header-->
        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="매월 시작일 수정"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="34dp"
            android:layout_height="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:text="초기화"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Body-->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="170dp"
            android:layout_height="24dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/shape_round_btn_orange"
            android:gravity="center_vertical|center_horizontal"
            android:text="@{vm.description}"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_header" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/picker_day"
            android:layout_width="100dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:value="@{vm.pickedDay}"
            app:layout_constraintBottom_toTopOf="@+id/tv_warning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:np_dividerColor="@color/dividerColor"
            app:np_dividerDistance="76dp"
            app:np_dividerThickness="2dp"
            app:np_selectedTextSize="38sp"
            app:np_textColor="@color/colorSubDescription"
            app:np_textSize="28sp"
            app:np_wheelItemCount="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="일"
            android:textSize="28sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@id/picker_day"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintBottom_toTopOf="@+id/tv_warning"

            />
        <!--TODO: 아이콘 변경-->
        <ImageView
            android:id="@+id/iv_navigation"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_info_18"
            app:layout_constraintBottom_toTopOf="@id/btn_complete"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="20dp"
            android:text="시작일 수정시 남은 생활비가 다시 계산됩니다."
            android:textColor="@color/colorWarning"
            app:layout_constraintBottom_toTopOf="@id/btn_complete"
            app:layout_constraintLeft_toRightOf="@id/iv_navigation" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/completeButtonColor"
            android:text="수정 완료"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>